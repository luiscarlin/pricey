{
  "name": "pricey",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "main": "index.js",
  "repository": "git@github.com:luiscarlin/pricey.git",
  "author": "Luis Carlin <luiscarlin@gmail.com>",
  "license": "MIT",
  "scripts": {
    "client": "yarn workspace client start",
    "server": "yarn workspace server start",
    "start": "concurrently --kill-others-on-fail 'yarn server' 'yarn client'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "devDependencies": {
    "husky": "^4.2.3",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1"
  },
  "dependencies": {
    "concurrently": "^5.1.0"
  }
}
